property newServerAcceptRef1  ${nuklei:newReferenceId()} # external
property newServerAcceptRef2  ${nuklei:newReferenceId()} # external
property streamAuthorization1 [0x00 0x00 0x00]
property streamAuthorization2 [0x00 0x00 0x00]

connect await ROUTED_SERVER 
        "nukleus://example/streams/source"
    option nukleus:route ${newServerAcceptRef1}
    option nukleus:window 8192 
    option nukleus:transmission "duplex"
    option nukleus:authorization ${streamAuthorization1}
connected

connect await ROUTED_SERVER 
        "nukleus://example/streams/source"
    option nukleus:route ${newServerAcceptRef2}
    option nukleus:window 8192 
    option nukleus:transmission "duplex"
    option nukleus:authorization ${streamAuthorization2}
connected


