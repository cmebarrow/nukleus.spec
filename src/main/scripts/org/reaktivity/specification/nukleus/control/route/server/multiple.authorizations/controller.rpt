property newServerConnectRef ${nuklei:newReferenceId()} # external scope

property route1Authorization 0x0001_000000000000L
property route2Authorization 0x0001_000000000001L

property nukleiR00C ${nuklei:directory("target/nukleus-itests").controlCapacity(1024, 1024)}

property controlR00C ${nukleiR00C.control("example")}

connect "agrona://stream/bidirectional"
        option agrona:reader ${agrona:broadcastReceiver(controlR00C.controller)}
        option agrona:writer ${agrona:manyToOneWriter(controlR00C.nukleus)}

connected

write 0x00000001
write ${controlR00C.nextCorrelationId()}
write [0x00]
write [0x06] "source"
write 0L
write [0x06] "target"
write ${newServerConnectRef}
write ${route1Authorization}
write 0
write flush

read 0x40000001
read ${controlR00C.correlationId()}
read (long:newServerAcceptRef)

write 0x00000001
write ${controlR00C.nextCorrelationId()}
write [0x00]
write [0x06] "source"
write ${newServerAcceptRef}
write [0x06] "target"
write ${newServerConnectRef}
write ${route2Authorization}
write 0
write flush

read 0x40000001
read ${controlR00C.correlationId()}
read  ${newServerAcceptRef}

read notify ROUTED_SERVER

close
closed
